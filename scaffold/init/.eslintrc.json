{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "func-names": "off",
    "no-await-in-loop": "off",
    "no-console": "off",
    "no-restricted-syntax": "off",
    "prefer-arrow-callback": "off"
  }
}
